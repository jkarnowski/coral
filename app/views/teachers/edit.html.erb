<h1 class="texttt">Edit Your Profile</h1>
<div class="spacee"></div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for :teachers, :url => url_for(controller: "/teachers", action: "update"), :html => {:method => :patch} do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', value: current_user.name %>

    <%= f.label :bio %>
    <%= f.text_area :bio, class: 'form-control', value: current_user.bio ||= "" %>

    <%= f.label :subject %>
    <%= f.text_field :subject, class: 'form-control', value: current_user.subject ||= ""  %>

    <%= f.label :grade_level %>
    <%= f.text_field :grade_level, class: 'form-control', value: current_user.grade_level ||= "" %>

    <div class="spacee"></div>

    <%= f.submit "Update", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>

